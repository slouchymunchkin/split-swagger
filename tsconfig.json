{
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": "src",
    "noImplicitAny": true,
    // "module": "es6",
    "target": "es5",
    "lib": ["es2017", "es2015", "dom", "es6"],
    "moduleResolution": "node",
    "declaration": true,
    "diagnostics": false,
    "listEmittedFiles": true,
    "skipLibCheck": true,
    "removeComments": true,
    "pretty": true
  },
  "exclude": ["node_modules", "build", "scripts", "acceptance-tests", "webpack", "jest", "src/setupTests.ts", "example", "lib", "dist", "slask"]
}
